.user{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
  background:url('https://www.bbin.design/repair/myinfo/p1.jpg');
  background-size:100% 100%;
  -moz-background-size:100% 100%;
  height: 180px;
  margin-bottom: 18%;
}
.pic {
  display:block; 
	overflow:hidden; 
	border-radius: 50%;
	width: 130rpx;
	height: 130rpx;
  margin: 60px 20px;
  border: 2px solid #ddddee;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.5);
}
.nime {
  color: black;
}
.btn{
  margin-top: 4%;
  font-size: 14px;
  letter-spacing: 1px;
  text-align: left;
}
