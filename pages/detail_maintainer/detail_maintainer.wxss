#tabs{
  font-size: 28rpx;
}
.tabs-box{
    display:flex;
    align-items:center;
    justify-content:center;
    height: 80rpx;
    line-height: 80rpx;
    text-align: center
}
.tabs-item.selected {
    color:#874b27;
    border-bottom:2rpx solid #874b27;
}
.tabs-item {
    width: 50%;
    color:#666;
    border-bottom:1rpx solid #e9e9e9;
}
.user{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: left;
  background:url('https://www.bbin.design/repair/myinfo/p1.jpg');
  background-size:100% 100%;
  -moz-background-size:100% 100%;
  height: 160px;
  margin-bottom: 15%;
}
.pic {
  display:block; 
	overflow:hidden; 
	border-radius: 50%;
	width: 130rpx;
	height: 130rpx;
  margin: 60px 20px;
  border: 2px solid #ddddee;  
  box-shadow: 3px 3px 10px rgba(0, 0, 0, 0.5);
}
